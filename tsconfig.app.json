{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "app/src/**/*", "app/src/**/*.vue", "domains/**/*"],
  "exclude": ["**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/src/*"],
      "@domains/*": ["./domains/*"]
    }
  }
}
