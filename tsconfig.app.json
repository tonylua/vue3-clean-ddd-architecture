{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "app/**/*", "app/**/*.vue", "domains/**/*", "infra/**/*"],
  "exclude": ["**/*.spec.(t|j)s"],
  "compilerOptions": {
    "moduleResolution": "node",
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/src/*"],
      "@domains/*": ["./domains/*"],
      "@infra/*": ["./infra/*"]
    }
  }
}
